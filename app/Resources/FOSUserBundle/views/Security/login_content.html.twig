{% trans_default_domain 'FOSUserBundle' %}
{% if error %}
  <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container col-sm-10 col-md-6 col-lg-4 " id="login-container">
  <h1 id="login-title">Connectez vous
  </h1>
  <form action="{{ path('fos_user_security_check') }}" method="post">
    {% if csrf_token %}
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="form-group" id="login-username">
      <label id="login-label-username" for="username">{{ 'security.login.username'|trans }}</label>
      <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"></div>
    <div class="form-group" id="login-password">
      <label id="login-label-password" for="password">{{ 'security.login.password'|trans }}</label>
      <input class="form-control form-control" type="password" id="password" name="_password" required="required">
    </div>
    <div class="form-check" id="login-check">
      <label class="form-check-label" id="login-remember-me">
        <input class="form-check-input" type="checkbox" name="_remember_me" value="on">
        {{ 'security.login.remember_me'|trans }}</label>
    </div>
    <div id="login-forgot">
      <a href="{{ path('fos_user_resetting_request') }}" id="a-login-forgot">Mot de passe oublié ?</a>
    </div>
    <button class="btn btn-primary btn-block" type="submit" id="login-submit" name="_submit" value="{{ 'security.login.submit'|trans }}">CONNEXION
    </button>
    <div id="login-register">
      <a href="{{ path('fos_user_registration_register') }}" id="a-login-register">Pas encore inscrit ? Créez votre compte</a>
    </div>
  </form>
  <section id="login-social-media">
    <div class="btn-group facebook">
      <span class="input-group-addon facebook_icon"><i class="fa fa-facebook" aria-hidden="true"></i></span>
      <a href="{{ path('hwi_oauth_connect') }}facebook" class="btn btn-block" id="facebook">Se connecter avec Facebook</a>
    </div>

    <div class="btn-group google">
      <span class="input-group-addon google_icon"><i class="fa fa-google" aria-hidden="true"></i></span>
      <a href="{{ path('hwi_oauth_connect') }}google" class="btn btn-block" id="google">Se connecter avec Google</a>
    </div>

    <div class="btn-group twi">
      <span class="input-group-addon twi_icon"><i class="fa fa-twitter" aria-hidden="true"></i></span>
      <a href="{{ path('hwi_oauth_connect') }}twitter" class="btn btn-block" id="twi">Se connecter avec Twitter</a>
    </div>
  </section>
</div>