{% trans_default_domain 'FOSUserBundle' %}

<h2 class="row d-flex justify-content-center">Gestion de votre compte</h2>
<div id="accordion" role="tablist">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header" role="tab" id="headingOne">
          <h5 class="mb-0">
            <a data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              Informations sur le compte
            </a>
          </h5>
        </div>
        <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
          <div class="card-body fos_user_user_show">
            <p>ICI NON UTILISATEUR
            </p>
            <p>ICI EMAIL</p>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-header" role="tab" id="headingOne">
          <h5 class="mb-0">
            <a href="#collapseTwo" data-toggle="collapse" aria-expanded="true" aria-controls="collapseOne">
              Modifier ses identifiants du compte
            </a>
          </h5>
        </div>
        <div id="collapseTwo" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
          <div class="card-body">
            <div class="row ">
              <form class="mr-5 ml-4" action="#" method="post">
                <h3>Modifier son e-mail</h3>
                <div class="form-group">
                  <label for="exampleInputEmail1">Nouveau e-mail</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="ici votre nouveau e-mail">
                </div>
                <button type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans }}">Modifier</button>
              </form>
              <form class="mr-5 ml-4" action="" method="post">
                <h3>Modifier son mot de passe</h3>
                <div class="form-group">
                  <label for="exampleInputPassword1">Nouveau mot de passe</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" aria-describedby="passwordHelp" placeholder=" ici votre nouveau mot de passe">
                </div>
                <button type="submit" class="btn btn-primary">Modifier</button>
              </form>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header" role="tab" id="headingTwo">
            <h5 class="mb-0">
              <a class="collapsed" data-toggle="collapse" href="#collapseThree" aria-expanded="false" aria-controls="collapseTwo">
                Modifier ses informations personnelles
              </a>
            </h5>
          </div>
          <div class=" card-body"></div>

        </div>

        <div id="collapseThree" class="collapse show" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">

        </div>
        <div class="card">
          <div class="card-header" role="tab" id="headingThree">
            <h5 class="mb-0">
              <a href="{{ path('fos_user_security_logout') }}">
                Se d√©connecter
              </a>
            </h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>