{% trans_default_domain 'FOSUserBundle' %}

<div class="container col-lg-4 col-md-6 col-sm-10" id="register-container">
  <h2 id="register-title">Créer son compte</h2>

  {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
  <div class="form-group">
    {{ form_label(form.username,null,{'label_attr': {'id':'register-label-username'},'label':'Nom d\'utilisateur *'}) }}
    {{ form_widget(form.username,{'attr': {'class':'form-control'}}) }}
    {{ form_errors(form.username) }}



    <div class="form-group">
        {{ form_label(form.email,null,{'label_attr': {'id':'register-label-email'},'label':'E-mail *'}) }}
        {{ form_widget(form.email,{'attr': {'class':'form-control'}}) }}
        {{ form_errors(form.email) }}

    </div>


    <div class="form-group">
      {{ form_label(form.plainPassword.first,null,{'label_attr': {'id':'register-label-password'},'label':'Mot de passe *'}) }}
      {{ form_widget(form.plainPassword.first,{'attr': {'class':'form-control'}}) }}
      {{ form_errors(form.plainPassword.first) }}
    </div>

    <div class="form-group">
      {{ form_label(form.plainPassword.second,null,{'label_attr': {'id':'register-label-passwordsecond'},'label':'Répéter le mot de passe *'}) }}
      {{ form_widget(form.plainPassword.second,{'attr': {'class':'form-control'}}) }}
      {{ form_errors(form.plainPassword.second) }}
    </div>


      <div class="g-recaptcha " id="recaptcha" data-sitekey="6Lf18DwUAAAAAIKQO6Ri94rnZDWcplWcli7_6qQ1"></div>


  </div>


      <input class="btn btn-primary form-control" type="submit" id="register-button" value="S'INSCRIRE"/>

  {{ form_end(form) }}
  <a href="#" id="register-a-confidentiality">Politique de confidentialité</a>
</div>
