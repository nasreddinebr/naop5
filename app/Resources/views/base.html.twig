<!DOCTYPE html>
<html lang="fr">

  <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
      <meta name="description" content="">
      <meta name="author" content="">
      {% block meta %}{% endblock %}

      <title>Nos Amis les Oiseaux -{% block title %}{% endblock %}
      </title>

      <!-- Bootstrap core CSS -->
      <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" rel="stylesheet">

      <!--Icons-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

      <!--Fonts-->
      <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Pacifico">
      <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">

      <!-- Custom styles for this template -->
      <link rel="stylesheet" href="{{ asset('css/main.css') }}">
      <link rel="stylesheet" href="{{ asset('css/radoncode.css') }}">
      <link rel="stylesheet" href="{{ asset('css/nasreddine.css') }}">

      <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('apple-touch-icon.png') }}">
      <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
      <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
      <link rel="manifest" href="{{ asset('manifest.json') }}">
      <link rel="mask-icon" href="{{ asset('safari-pinned-tab.svg') }}" color="#5bbad5">
      <meta name="theme-color" content="#ffffff">

      <script src='https://www.google.com/recaptcha/api.js'></script>
      <script src="https://use.fontawesome.com/0edc5bd63b.js"></script>
  </head>

  {% block bodyId %}
    <body>
  {% endblock %}
    <!--div class="container-light"-->

      <div class="desktop">

        <div class="d-flex justify-content-end">
          <div class="mr-auto p-2">
            <a href="{{ path('home') }}"><img class="logo-icon" src="{{ asset('img/logo_nao.png') }}" alt="NAO">
            </a>
          </div>

          <div class=" p-2">




            <nav class="nav">
                {% if(is_granted('ROLE_ADMIN')) %}
                    <a class="nav-link" href="{{ path('admin_index') }}" title="Espace d'administration"><i class="material-icons">dashboard</i></a>
                {% endif %}
              <a class="nav-link" href="{{ path('home') }}">Accueil</a>
              <a class="nav-link" href="{{ path('association') }}">Notre association</a>
              <a class="nav-link" href="{{ path('news', {'page': 1}) }}">Actualités</a>
              <a class="nav-link" href="{{ path('contact') }}">Contact</a>
            </nav>
          </div>

          <div class=" p-2">

              {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                  <div class="dropdown" style="padding-top: 8px">
                      <button class="dropbtn" title="Votre compte"><i class="material-icons ">account_circle</i></button>
                      <div class="dropdown-content">
                          <span class="username_connected"><strong>Bonjour {{ app.user.username }}</strong></span>
                          <a class="nav-link" href="{{ path('fos_user_profile_edit') }}">Profile</a>
                          <a class="nav-link" href="{{ path('add_observation') }}">Ajouter une observation</a>
                          <a class="nav-link" href="{{ path('fos_user_security_logout') }}">Deconnexion</a>
                      </div>
                  </div>
              {% else %}
                  <div class="dropdown" style="padding-top: 8px">
                      <button class="dropbtn" title="Se Connecter"><i class="material-icons ">account_circle</i></button>
                      <div class="dropdown-content">
                        <a class="nav-link" href="{{ path('fos_user_security_login') }}">Connexion</a>
                      </div>
                  </div>
              {% endif %}

          </div>

        </div>
      </div>

      <div class="mobil">
          <div class="d-flex justify-content-end">

              <div class="mr-auto p-2">
                  <a href="/"><img class="logo-icon" src="{{ asset('img/logo_nao.png') }}" alt="NAO"> </a>
              </div>

              <div class=" p-2">

                  {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                      <div class="dropdown user">
                          <button class="dropbtn" title="Votre compte"><i class="material-icons ">account_circle</i></button>
                          <div class="dropdown-content">
                              <span class="username_connected"><strong>Bonjour {{ app.user.username }}</strong></span>
                              <a class="nav-link" href="{{ path('fos_user_profile_edit') }}">Profile</a>
                              <a class="nav-link" href="{{ path('add_observation') }}">Ajouter une observation</a>
                              <a class="nav-link" href="{{ path('fos_user_security_logout') }}">Deconnexion</a>
                          </div>
                      </div>
                  {% else %}
                      <div class="dropdown user">
                          <button class="dropbtn" title="Se Connecter"><i class="material-icons ">account_circle</i></button>
                          <div class="dropdown-content">
                              <a class="nav-link" href="{{ path('fos_user_security_login') }}">Connexion</a>
                          </div>
                      </div>
                  {% endif %}
              </div>
              <div class=" p-2">
                  <div class="dropdown">
                      <button class="dropbtn" title="Menu"><i class="material-icons ">menu</i></button>
                      <div class="dropdown-content">
                          {% if(is_granted('ROLE_ADMIN')) %}
                              <a class="nav-link" href="{{ path('admin_index') }}" title="Espace d'administration"><i class="material-icons">dashboard</i></a>
                          {% endif %}
                          <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                          <a class="nav-link" href="{{ path('association') }}">Notre association</a>
                          <a class="nav-link" href="{{ path('news', {'page': 1}) }}">Actualités</a>
                          <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                      </div>
                  </div>
              </div>
          </div>
      </div>
    <!--/div-->

    {% block body %}{% endblock %}

    <!-- Footer -->
    <footer>

      <div id="container-footer">
        <div id="login-law">
          <a href="{{ path('mentionsLegales') }}">Mentions légales - Protections des données</a>

          <p >Tous droits réservés</p>
        </div>
        <div id="login-picture-social-media">
          <a href="#"><img src="{{ asset('img/facebook-logo.png')}}" alt="Facebook">
          </a>
          <a href="#"><img src="{{ asset('img/instagram.png')}}" alt="Instagram"></a>
        </div>
      </div>
      </footer>
      <!--Import Jquery, propper.js, bootstrap.min.js, and main.js-->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.6/umd/popper.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>
      <script src="{{ asset('js/main.js')}}"></script>

      {% block javascript %}{% endblock %}
    </body>

  </html>